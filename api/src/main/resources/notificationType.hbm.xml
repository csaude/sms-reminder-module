<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping
	package="org.openmrs.module.smsreminder.model">
	<class
		name="org.openmrs.module.smsreminder.model.NotificationType"
		table="smsreminder_notification_type" batch-size="25">

		<id name="notificationTypeId" type="int"
			column="notification_type_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="notification_type_id"
			insert="false" />


		<property name="name" type="java.lang.String" column="name"
			not-null="false" />

		<property name="numberOfDays" type="java.lang.Integer"
			column="number_of_days" not-null="false" />
	</class>
</hibernate-mapping>
